<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginHorizontal="8dp"
    android:elevation="4dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="vertical">

        <!-- Ders ve Konu -->
        <TextView
            android:id="@+id/textTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matematik • Trigonometri"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000000" />

        <!-- Tarih -->
        <TextView
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17 Mayıs 2025"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="6dp" />

        <!-- Soru metni -->
        <TextView
            android:id="@+id/textQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bir üçgende tanjant oranı nasıl bulunur?"
            android:textSize="14sp"
            android:textColor="#333333" />

        <!-- Yanlışsa ❗ ikonu -->
        <ImageView
            android:id="@+id/iconIncorrect"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:layout_marginTop="4dp"
            android:src="@android:drawable/ic_dialog_alert"
            android:contentDescription="Incorrect answer"
            android:visibility="gone" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
